<div class="album py-5 bg-warning" id="subscribed">
  <div class="container color-white">
    <div class="row">
      <div class="col-md-12 text-center">
        <h4>Join Our Mailing List</h4>
        <p>Be the first to hear about new designs, upcoming sales, and furniture trends.</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12" style="max-width: 768px;margin:auto;">
        <%= form_for(Subscriber.new, remote: true) do |f| %>
          <div class="form-group row">
            <%= f.hidden_field :pagename, :value => controller.controller_name %>
            <div class="col-8 col-sm-10">
              <%= f.text_field :email, :required => true, type: 'email', class: 'form-control form-control', placeholder: 'Enter your email'  %>
            </div>
            <div class="col-3 col-sm-2">
              <%= f.submit 'Subscribe', class: 'btn btn-danger mb-2' %>
            </div>
          </div>
          <% end %>
          <div id="subscriber-message">
            <% if flash.now[:notice] %>
              <div class="alert alert-warning alert-dismissible fade show mb-0" role="alert">
                <strong><%= notice %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% end %>
        </div>
      </div> 
    </div>
  </div>
</div>

<div class="footer-area" id="contact">
  <div class="album py-5" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <h4>Get In Touch</h4>
          <!--<form>
            <div class="form-group">
              <input type="name" class="form-control" id="exampleInputName" placeholder="Enter name">
